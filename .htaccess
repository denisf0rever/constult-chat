# Убедитесь, что сервер использует модуль mod_rewrite
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Перенаправляем все запросы на index.html, кроме запросов к существующим файлам и директориям
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^.*$ /dist/index.html [L]
</IfModule>

# Убедитесь, что сервер обрабатывает index.html по умолчанию
DirectoryIndex dist/index.html
