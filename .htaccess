# Установить правильные MIME-типы для файлов JavaScript и CSS
AddType application/javascript .js
AddType text/css .css

# Включить перезапись URL для чистых URL (например, для использования с React Router)
RewriteEngine On
RewriteBase /

# Перенаправить все запросы на index.html, за исключением существующих файлов и директорий
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /dist/index.html [L]

# Установить заголовки для кэширования статических ресурсов
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Включить сжатие текстовых файлов
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript
</IfModule>

# Защитить .htaccess и другие чувствительные файлы
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Настройки CORS (если необходимо)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>
